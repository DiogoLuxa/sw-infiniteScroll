{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "react-jsx",
        "lib": ["esnext", "dom"],
        "module": "node16",
        "moduleResolution": "node16",
        "types": ["@testing-library/jest-dom"],
        "strict": true,
        "declaration": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["**/*.js", "**/*.jsx", "./vitest.setup.js"],
    "exclude": ["node_modules"]
}
